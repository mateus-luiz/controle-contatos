@model List<ContactModel>;
@{
    ViewData["Title"] = "Contatos";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    
    <table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Celular</th>
            <th scope="col"><a class="btn btn-outline-success" role="button" asp-controller="Contact" asp-action="Create">Adicionar novo contato</a></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(var contact in Model)
            {
                <tr>
                    <th scope="row">@contact.Id</th>
                    <td>@contact.Name</td>
                    <td>@contact.Email</td>
                    <td>@contact.Phone</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-outline-primary mr-3" asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id">Editar</a>
                            <a role="button" class="btn btn-outline-danger mr-3" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id">Apagar</a>
                        </div>
                    </td>
                </tr>   
            }
        }
  </tbody>
</table>
</div>

